
 <%- include('header') -%>
 
    <main class="container">
      <div class="p-4 p-md-5 mb-4 rounded text-bg-dark">
        <div class="col-md-6 px-0">
          <h1 class="display-4 fst-italic"><%= newBlog.articles[0].title %></h1>
          <p class="lead my-3"><%=newBlog.articles[0].description %></p>
          <p class="lead mb-0"><a href="<%= newBlog.articles[0].url %>" class="text-white fw-bold">Continue reading...</a></p>
        </div>
      </div>

  <div class="row mb-2">
    <% for (let i =1;i<5;i++) {%>
      <% if(newBlog.articles[i].description !== null){ %>
        <div class="col-md-6">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              <h5 class="mb-0"><%= newBlog.articles[i].title %></h5>
              <p class="card-text mb-auto"><%=newBlog.articles[i].description.slice(0,100) %></p>
              <a href="<%= newBlog.articles[i].url %>" class="stretched-link">Continue reading</a>
            </div>
            <div class="col-auto d-none d-lg-block">
              <img class="bd-placeholder-img" width="200" height="250" src="<%= newBlog.articles[i].urlToImage %>" alt="">
    
            </div>
          </div>
        </div>
      <% } %>
      
      <% } %>
    
  </div>

  <div class="row g-5">
    <div class="col-md-8">
      <h1 style="display: inline-block;" class="blog-header-logo text-dark">Hot Topics </h1>
      <% for (let j =5;j<9;j++) {%>
        <% if(newBlog.articles[j].description !== null){ %>
          <hr class="featurette-divider">
      
          <div class="row featurette">
            <div class="col-md-7">
              <h5 class="featurette-heading fw-normal lh-1"> <%= newBlog.articles[j].title %></h5>
              <p class="lead"> <%=newBlog.articles[j].description.slice(0,100) %></p>
              <a href="<%= newBlog.articles[j].url %>" class="stretched-link">Continue reading</a>
            </div>
            <div class="col-md-5">
              <img  class="jumbo" src="<%= newBlog.articles[j].urlToImage %>" alt="">
      
            </div>
          </div>
   <% } %>
          <% } %>
    </div>

    <div class="col-md-4">
      <div class="position-sticky" style="top: 2rem;">
        <div class="p-4 mb-3 bg-light rounded">
          <h4 class="fst-italic">About</h4>
          <p class="mb-0">Customize this section to tell your visitors a little bit about your publication, writers, content, or something else entirely. Totally up to you.</p>
        </div>

        <div class="p-4">
          <h4 class="fst-italic">Archives</h4>
          <ol class="list-unstyled mb-0">
            <li><a href="#">March 2021</a></li>
            <li><a href="#">February 2021</a></li>
            <li><a href="#">January 2021</a></li>
            <li><a href="#">December 2020</a></li>
            <li><a href="#">November 2020</a></li>
            <li><a href="#">October 2020</a></li>
            <li><a href="#">September 2020</a></li>
            <li><a href="#">August 2020</a></li>
            <li><a href="#">July 2020</a></li>
            <li><a href="#">June 2020</a></li>
            <li><a href="#">May 2020</a></li>
            <li><a href="#">April 2020</a></li>
          </ol>
        </div>

        <div class="p-4">
          <h4 class="fst-italic">Elsewhere</h4>
          <ol class="list-unstyled">
            <li><a href="#">GitHub</a></li>
            <li><a href="#">Twitter</a></li>
            <li><a href="#">Facebook</a></li>
          </ol>
        </div>
      </div>
    </div>
  </div>

</main>


    <%- include('footer') -%>
      
      
      